<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../components/head.ejs') %>
    <title>main</title>
  </head>
  <body>
    <%- include('../components/header.ejs') %> <% if (data.length > 0) { %>
    <h1 class="page-title">Todo's to do</h1>
    <div class="todo-grid">
      <% data.forEach(element => { %>
      <a href="/edit-todo/<%=element.id %>" class="cardial-link">
        <div class="todo-card">
          <label for="isDone" class="description"><%= element.title %></label>
          <input type="checkbox" name="isDone" <% if (element.isDone == true) { %>
           checked
          <% } %> />
        </div>
      </a>
      <% }) %>
    </div>

    <% }else{ %>
    <h1 class="page-title">there are no todo's to do(</h1>
    <% } %>

    <%- include('../components/footer.ejs') %>
  </body>
</html>
